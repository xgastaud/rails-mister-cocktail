<div class="spacer">
  <h1>Recipe for a <%= @cocktail.name %> </h1>
</div>
<%= link_to "Delete cocktail", cocktail_path(@cocktail), method: :delete %> |
<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
<div class="container">
  <div>
    <ul>
      <% @cocktail.doses.each do |dose|  %>
        <li>
          <%= dose.ingredient.name %> | <%= dose.description %>
        </li>
      <% end %>
    </ul>
  </div>
  <div>
    <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  </div>
</div>

